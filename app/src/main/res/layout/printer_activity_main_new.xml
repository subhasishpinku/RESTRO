<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ebits.restro.activities.PrinterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <Button

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_discovery"
                android:id="@+id/button_discovery"
                android:background="@color/colorPrimary"
                android:textColor="@color/windowBackground"/>

            <Button
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_samplereceipt"
                android:id="@+id/button_open"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/windowBackground"/>

            <Button
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_samplecoupon"
                android:id="@+id/btnSampleCoupon"
                android:background="@color/colorPrimary"
                android:textColor="@color/windowBackground"/>
            <Button
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_button_logsettings"
                android:id="@+id/button_logsettings"
                android:background="@color/colorPrimary"
                android:textColor="@color/windowBackground"/>
            <Button
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_getname"
                android:text="@string/main_button_getname"
                android:background="@color/colorPrimary"
                android:textColor="@color/windowBackground"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_warnings"
                android:id="@+id/textView"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtWarnings"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:inputType="none"
                android:enabled="false"
                android:focusable="false" />

        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>