<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_drawable"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/relativeSearch"
        android:weightSum="0"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:layout_weight="2">

            <EditText
                android:id="@+id/searchItems"
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textStyle="bold"
                android:hint="Search items here"
                android:paddingLeft="5dp"
                android:paddingRight="45dp"
                android:singleLine="true"
                android:theme="@style/MyEditText"
                android:ems="@integer/editTextEMS"
                android:windowSoftInputMode="adjustResize|stateHidden"/>

            <Button
                android:id="@+id/clearSearchText"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:layout_gravity="right|center_vertical"
                android:background="@android:drawable/ic_menu_close_clear_cancel"
                android:onClick="onClearSearchText"
                android:visibility="gone"/>

        </FrameLayout>

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:background="@color/headerColor"
            android:src="@drawable/search_btn"
            android:textColor="@color/textColorPrimary"
            android:onClick="onSearchMenus"
            />
        <ImageView
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"/>
        <ImageButton
            android:id="@+id/existingItem"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:src="@drawable/existing"
            android:background="@color/headerColor"
            android:textColor="@color/textColorPrimary"
            android:onClick="onExistingItem"
            />
        <ImageView
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"/>
        <ImageButton
            android:id="@+id/expandButton"
            android:layout_width="@dimen/zero_dp"
            android:layout_height="match_parent"
            android:layout_weight="0.90"
            android:src="@drawable/expand_btn"
            android:background="@color/headerColor"
            android:textColor="@color/textColorPrimary"
            android:onClick="onExpandMenus"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_search"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/padding_drawable"
        android:clipToPadding="false"
        android:layout_below="@id/relativeSearch"/>


</RelativeLayout>